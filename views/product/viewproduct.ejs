<!DOCTYPE html>
<html>
<head>
    <title>View Products</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
</head>
<body>

   
    <%- include("../admin/admindashboard.ejs") %>

    <div class="container mt-5">
        <h2 class="mb-4">All Products</h2>
        <table class="table table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Product ID</th>
                    <th>Name</th>
                    <th>Category id</th>
                    <th>Supplier id</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Min Quantity</th>
                    <th>Update</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                <% if (product && product.length > 0) { %>
                    <% product.forEach(function(prod, index) { %>
                        <tr>
                            <td><%= index + 1 %></td>
                            <td><%= prod.name %></td>
                            <td><%= prod.cid %></td>
                            <td><%= prod.sid %></td>
                            <td><%= prod.price %></td>
                            <td><%= prod.quant %></td>
                            <td><%= prod.minqty %></td>
                            <td>
                                <a href="/product/update/<%= prod.pid %>" class="btn btn-warning btn-sm">Update</a>
                            </td>
                            <td>
                                <form action="/delete/<%= prod.pid %>" method="POST" onsubmit="return confirm('Are you sure?')">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="9" class="text-center">No products found</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>

</body>
</html>
