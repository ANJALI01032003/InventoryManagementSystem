<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>View Suppliers</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

<%- include("../header.ejs") %>
<br><br>

<div class="container">
  <div class="d-flex justify-content-between mb-3">
    <a href="/supplier/addform" class="btn btn-primary">âž• Add Supplier</a>
    <form class="d-flex" action="/supplier/search" method="get">
      <input class="form-control me-2" type="search" name="name" placeholder="Search by name" />
      <button class="btn btn-outline-success" type="submit">Search</button>
    </form>
  </div>

  <% if (msg && msg.length > 0) { %>
    <div class="alert alert-info text-center"><%= msg %></div>
  <% } %>

  <table class="table table-bordered table-hover">
    <thead class="table-dark">
      <tr>
        <th>#</th>
        <th>Name</th>
        <th>Email</th>
        <th>Contact</th>
        <th>CompanyName</th>
        <th>Address</th>
        <th>Contact</th>
        <th>Delete</th>
        <th>Update</th>
      </tr>
    </thead>
    <tbody>
      <% if (supplierList && supplierList.length > 0) { %>
        <% supplierList.forEach((row, index) => { %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= row.name %></td>
            <td><%= row.email %></td>
            <td><%= row.contact %></td>
            <td><%= row.companyname %></td>
            <td><%= row.address %></td>
            <td><%= row.gstno %></td>
            <td>
              <a href="/supplier/update/<%= row.sid %>" class="btn btn-warning btn-sm">Update</a>
            </td>
            <td><button onclick="deleteSupplier(<%= row.sid %>)" class="btn btn-danger btn-sm">Delete</button></td>
          </tr>
        <% }) %>
      <% } else { %>
        <tr><td colspan="9" class="text-center">No suppliers found.</td></tr>
      <% } %>
    </tbody>
  </table>
</div>

<script>
  function deleteSupplier(id) {
    if (confirm("Are you sure you want to delete this supplier?")) {
       console.log("Deleting supplier with ID:", id); // <-- Add this
      fetch(`/supplier/delete/${id}`, {
        method: 'DELETE'
      })
      .then(res => res.text())
      .then(msg => {
        // alert(msg);
        location.reload();
      })
      .catch(err => console.error("Delete error:", err));
    }
  }
</script>

</body>
</html>
