<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

</head>
<body>
    <%- include("../admin/admindashboard.ejs") %>
    <br><br>
    <div class="container">
        <form action="/categories/search" method="get" class="mb-3">
    <input type="text" name="keyword" placeholder="Search category..." class="form-control" style="width:300px; display:inline-block;" required>
    <button type="submit" class="btn btn-primary">Search</button>
</form>

    <table class="table table-dark table-bordered">
        <tr>
            <th>SR NO</th>
            <th> NAME</th>
            <th>Delete</th>
            <th>Update</th>
        </tr>

         <tbody id="tblBody">
        <%
        if(catList.length!=0)
        {
        catList.forEach((row,index)=>{
            %>

            <tr>
                <td><%=index+1%></td>
                <td><%=row.name%></td>
               <td>
                <button class="btn alert-dark" onclick="return confirmDelete(<%= row.cid %>)">
                 <i class="bi bi-trash"></i> Delete
            </button>
            </td>

                <!-- <td><a href="/categories/delbyid/<%= row.cid%>" onclick="return confirm('Are you sure you want to delete This?')">Delete</a></td> -->
               <td>
    <a href="/categories/updcatbyid?cid=<%=row.cid%>&name=<%= row.name %>&description=<%= row.description %>" class="btn btn-warning">
        <i class="bi bi-pencil-square"></i> Update
    </a>
</td>

            </tr>

            <%
        });
    }
    else{
        %>
        <tr><td colspan="4">No data found</td></tr>
        <%
    }
    %>
    <br><br>
    <!-- <%
        if(msg.length!=0)
        {
        %>
        <div class="alert alert-primary" role="alert">
            <%=msg%>
        </div>
        <%
        }
        %>   -->
        </tbody>
    </table>

    <%
        if(msg.length!=0)
        {
        %>
        <div class="alert alert-primary" role="alert">
            <%=msg%>
        </div>
        <%
        }
        %>  
    </div>


<script>
    function confirmDelete(id) {
        Swal.fire({
            title: 'Are you sure?',
            text: "You won't be able to revert this!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#3085d6',
            confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
            if (result.isConfirmed) {
                fetch(`/categories/delbyid/${id}`, {
                    method: 'DELETE'
                })
                .then(response => response.text())
                .then(msg => {
                    Swal.fire('Deleted!', msg, 'success').then(() => {
                        window.location.reload();
                    });
                })
                .catch(err => {
                    Swal.fire('Error!', 'Could not delete category.', 'error');
                    console.error(err);
                });
            }
        });
    }
</script>



</body>
</html>