<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update Purchase</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>

    <%- include("../header.ejs") %>
    <br><br>

    <form name="frm" action="/purchase/update/<%= id %>" method="post">
        <div class="container bg-dark text-light p-5 rounded">
            <h2 class="text-center">Update Purchase</h2>
            <br>

            <div class="form-group">
                <input type="text" class="form-control" name="invoiceNo" placeholder="Enter Invoice No" value="<%= invoiceNo || '' %>" required />
            </div>

            <div class="form-group">
                <input type="date" class="form-control" name="purchaseDate" value="<%= purchaseDate ? purchaseDate.toISOString().split('T')[0] : '' %>" required />
            </div>

            <div class="form-group">
                <input type="number" class="form-control" name="sid" placeholder="Enter Supplier ID" value="<%= sid || '' %>" required />
            </div>

            <div class="form-group">
                <input type="text" class="form-control" name="items" placeholder="Enter Items" value="<%= items || '' %>" required />
            </div>

            <div class="form-group">
                <input type="number" step="0.01" class="form-control" name="totalAmount" placeholder="Enter Total Amount" value="<%= totalAmount || '' %>" required />
            </div>

            <div class="form-group">
                <input type="text" class="form-control" name="paymentMode" placeholder="Enter Payment Mode" value="<%= paymentMode || '' %>" required />
            </div>

            <div class="form-group">
                <input type="text" class="form-control" name="gstInvoice" placeholder="Enter GST Invoice Number" value="<%= gstInvoice || '' %>" required />
            </div>

            <div class="form-group">
               <input type="submit" class="btn btn-success form-control" value="Update Purchase" />
            </div>

            <% if (msg && msg.length !== 0) { %>
                <div class="alert alert-info text-center">
                    <%= msg %>
                </div>
            <% } %>
        </div>
    </form>

</body>
</html>
